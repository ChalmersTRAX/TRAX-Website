name: hugo-latest-cd

on:
  push:
    branches:
      - master

env:
  TOKEN: ${{ secrets.GITHUB_TOKEN }}
  HUGO_ARGS: '--minify --cleanDestinationDir'

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - name: Check out deploy branch
        uses: actions/checkout@deploy
        with:
          fetch-depth: 1
      - name: ðŸš€ Build and deploy
        uses: victoriadrake/hugo-latest-cd@master